{{# partial "titulo" }}
    <title>GeSoc - Asociar Categoria</title>
{{/partial}}

{{# partial "contenido" }}
    <section>

    <div class="mt-10 sm:mt-0">
      <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
          <div class="px-4 sm:px-0">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Categorias</h3>
            <p class="mt-1 text-sm leading-5 text-gray-600">
              Agregan comportamiento a tu entidad.
            </p>
          </div>
        </div>
        <div class="mt-5 md:mt-0 md:col-span-2">
          <form action="/entidadesJuridicas/asociarCategoria" method="POST">
            <div class="shadow overflow-hidden sm:rounded-md">
              <div class="px-4 py-5 bg-white sm:p-6">
                <fieldset class="mt-6">
                  <legend class="text-base leading-6 font-medium text-gray-900">Categoria</legend>
                  <p class="text-sm leading-5 text-gray-500">Escriba el nombre y seleccione las reglas que incluir√°.</p>
                  <div class="mt-4">
                    <div class="col-span-6 sm:col-span-4">
                      <label for="idEntidadJuridica" class="block text-sm font-medium leading-5 text-gray-800">Identificador de su entidad</label>
                      <input type="text" name ="idEntidadJuridica" id="idEntidadJuridica" value="{{idEntidadJuridica}}" readonly="readonly" class="mt-1 form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                    </div>
                  </div>
                  <div class="mt-4">
                    <div class="col-span-6 sm:col-span-4">
                      <label for="nombreCategoria" class="block text-sm font-medium leading-5 text-gray-800">Nombre Categoria</label>
                      <input type="text" name ="nombreCategoria" id="nombreCategoria" class="border border-green-700 mt-1 form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" required>
                    </div>
                  </div>
                </fieldset>
                <div class="hidden sm:block">
                  <div class="py-3">
                    <div class="border-t border-gray-200"></div>
                  </div>
                </div>
                <fieldset>
                  <legend class="text-base leading-6 font-medium text-gray-900">Agregar Reglas:</legend>
                  <div class="mt-4">
                    <div class="flex items-start">
                      <div class="flex items-center h-5">
                        <input name="regla" value="1" id="regla1" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
                      </div>
                      <div class="ml-3 text-sm leading-5">
                        <label for="regla1" class="font-medium text-gray-700">Limitar Agregado de Entidades Base</label>
                        <p class="text-gray-500">Regla</p>
                      </div>
                    </div>

                    <div class="mt-4">
                      <div class="flex items-start">
                        <div class="flex items-center h-5">
                          <input name="regla" value="2" id="regla2" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
                        </div>
                        <div class="ml-3 text-sm leading-5">
                          <label for="regla2" class="font-medium text-gray-700">Limitar A Dos Operaciones</label>
                          <p class="text-gray-500">Regla</p>
                        </div>
                      </div>
                    </div>

                    <div class="mt-4">
                      <div class="flex items-start">
                        <div class="flex items-center h-5">
                          <input name="regla" value="3" id="regla3" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
                        </div>
                        <div class="ml-3 text-sm leading-5">
                          <label for="regla3" class="font-medium text-gray-700">Limitar Agregado de Operaciones</label>
                          <p class="text-gray-500">Regla</p>
                        </div>
                      </div>
                    </div>

                    <div class="mt-4">
                      <div class="flex items-start">
                        <div class="flex items-center h-5">
                          <input name="regla" value="4" id="regla4" type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out">
                        </div>
                        <div class="ml-3 text-sm leading-5">
                          <label for="regla4" class="font-medium text-gray-700">Limitar a Dos Entidades Base</label>
                          <p class="text-gray-500">Regla</p>
                        </div>
                      </div>
                    </div>

                  </div>
                </fieldset>
              </div>
              <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                <button class="py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-teal-400 shadow-sm hover:bg-indigo-500 focus:outline-none focus:shadow-outline-blue focus:bg-indigo-500 active:bg-indigo-600 transition duration-150 ease-in-out">
                  Asociar Categoria
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    </section>
{{/partial}}

{{> layout.html.hbs }}