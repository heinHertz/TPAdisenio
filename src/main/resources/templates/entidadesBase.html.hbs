{{# partial "titulo" }}
    <title>GeSoc - Entidades Base</title>
{{/partial}}

{{# partial "contenido" }}
    <section>
    <div class="inline-flex rounded-md shadow">
        <a href="/entidadesBase/nueva" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-green-400 hover:bg-indigo-500 focus:outline-none focus:shadow-outline transition duration-150 ease-in-out">
            Agregar Entidad
        </a>
    </div>

    <div class="flex flex-col">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead>
                <tr>
                  <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                    Nombre
                  </th>
                  <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                    Descripción
                  </th>
                  <th class="px-6 py-3 bg-gray-50"></th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
              {{#entidadesBase}}
                <tr>
                  <td class="px-6 py-4 whitespace-no-wrap">
                    <div class="flex items-center">
                      <div class="ml-4">
                        <div class="text-sm leading-5 font-medium text-gray-900">
                          {{nombreFicticio}}
                        </div>
                        <div class="text-sm leading-5 text-gray-500">
                          Entidad Base
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap">
                    <div class="text-sm leading-5 text-gray-900">{{descripcion}}</div>
                    <div class="text-sm leading-5 text-gray-500">Descripción</div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-right text-sm leading-5 font-medium">
                    <a href="/entidadesBase/{{id}}" class="text-indigo-600 hover:text-indigo-900">Ver Detalles</a>
                  </td>
                </tr>
              {{/entidadesBase}}

                <!-- More rows... -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    </section>
{{/partial}}

{{> layout.html.hbs }}